# =============================================================================
# Single Node Topology - Example Configuration
# =============================================================================
# Copy this file to terraform.tfvars and customize values
# Or use: terraform apply -var-file=../../hardware/r8g.2xlarge.tfvars
# =============================================================================

# AWS Configuration
region            = "us-west-2"
availability_zone = "us-west-2a"
aws_profile       = "boxloop-admin"

# SSH Configuration
key_name        = "dbdeepdive-key"
ssh_private_key = "~/.ssh/id_rsa"

# PostgreSQL AMI (pre-configured with RAID10 volumes)
postgres_ami = "ami-0266f4b9e2c1841fb"

# Instance Type (override with hardware/*.tfvars)
postgres_instance_type = "r8g.2xlarge"

# EBS Configuration
create_ebs_volumes            = false  # AMI has volumes
set_delete_on_termination     = true   # Cleanup on destroy
