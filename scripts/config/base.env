# =============================================================================
# BASE CONFIG: DISK / BLOCK DEVICE TUNING (Golden Facts)
# =============================================================================
# Optimal settings for NVME/EBS on RAID arrays.
# DATA = random I/O (low read_ahead), WAL = sequential I/O (high read_ahead)
# =============================================================================

# =============================================================================
# RAID CONFIG - DATA VOLUME (/dev/md0)
# =============================================================================
DATA_MOUNT="/data"
DATA_RAID_DEVICE="/dev/md0"
DATA_RAID_LEVEL=0
DATA_RAID_CHUNK="512K"
FS_TYPE="xfs"
XFS_MOUNT_OPTS_DATA="rw,noatime,nodiratime,attr2,inode64,logbufs=8,logbsize=32k,sunit=1024,swidth=4096,noquota"

# =============================================================================
# RAID CONFIG - WAL VOLUME (/dev/md1)
# =============================================================================
WAL_MOUNT="/wal"
WAL_RAID_DEVICE="/dev/md1"
WAL_RAID_LEVEL=0
WAL_RAID_CHUNK="512K"
XFS_MOUNT_OPTS_WAL="rw,noatime,nodiratime,attr2,inode64,logbufs=8,logbsize=32k,sunit=1024,swidth=4096,noquota"

# =============================================================================
# BLOCK DEVICE TUNING - DATA (Random I/O Optimized)
# =============================================================================
DATA_READ_AHEAD_KB=4096
DATA_NR_REQUESTS=63
DATA_MAX_SECTORS_KB=256
DATA_ADD_RANDOM=0
DATA_NOMERGES=0

# =============================================================================
# BLOCK DEVICE TUNING - WAL (Sequential I/O Optimized)
# =============================================================================
WAL_READ_AHEAD_KB=4096
WAL_NR_REQUESTS=128
WAL_MAX_SECTORS_KB=256
WAL_ADD_RANDOM=0
WAL_NOMERGES=0

# =============================================================================
# MDADM TUNING
# =============================================================================
MD_STRIPE_CACHE_SIZE=8192
