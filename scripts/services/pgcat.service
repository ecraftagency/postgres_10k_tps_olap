[Unit]
Description=PgCat PostgreSQL Connection Pooler
After=network.target

[Service]
Type=simple
User=ubuntu
ExecStart=/usr/local/bin/pgcat /etc/pgcat/pgcat.toml
Restart=on-failure
RestartSec=5
LimitNOFILE=65535

# Memory limit for proxy node (8GB max)
MemoryMax=6G

# CPU scheduling
Nice=-5

[Install]
WantedBy=multi-user.target
