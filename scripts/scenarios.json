    "11": {
      "id": "postgres_tpcb",
      "name": "pgbench TPC-B",
      "desc": "PostgreSQL OLTP - 100 clients, TPC-B like workload with full monitoring",
      "target_disk": "postgres",
      "duration": 60,
      "begin": [
        {
          "name": "sysctl_swappiness",
          "cmd": [
            "sysctl",
            "-w",
            "vm.swappiness=1"
          ]
        },
        {
          "name": "sysctl_dirty_background",
          "cmd": [
            "sysctl",
            "-w",
            "vm.dirty_background_ratio=1"
          ]
        },
        {
          "name": "sysctl_dirty_ratio",
          "cmd": [
            "sysctl",
            "-w",
            "vm.dirty_ratio=4"
          ]
        },
        {
          "name": "sysctl_dirty_expire",
          "cmd": [
            "sysctl",
            "-w",
            "vm.dirty_expire_centisecs=200"
          ]
        },
        {
          "name": "sysctl_dirty_writeback",
          "cmd": [
            "sysctl",
            "-w",
            "vm.dirty_writeback_centisecs=100"
          ]
        },
        {
          "name": "pg_stat_reset",
          "cmd": [
            "sudo",
            "-u",
            "postgres",
            "psql",
            "-c",
            "SELECT pg_stat_reset(); SELECT pg_stat_reset_shared('bgwriter');"
          ]
        }
      ],
      "parallel": [
        {
          "name": "meminfo",
          "cmd": [
            "bash",
            "-c",
            "for i in $(seq 1 {duration}); do date '+%H:%M:%S'; grep -E 'Dirty|Writeback' /proc/meminfo; echo '---'; sleep 1; done"
          ]
        },
        {
          "name": "dstat",
          "cmd": [
            "dstat",
            "-tcmdr",
            "--disk-util",
            "1",
            "{duration}"
          ]
        },
        {
          "name": "mpstat",
          "cmd": [
            "mpstat",
            "-P",
            "ALL",
            "1",
            "{duration}"
          ]
        },
        {
          "name": "pg_wait_events",
          "cmd": [
            "bash",
            "-c",
            "for i in $(seq 1 {duration}); do echo \"=== $(date '+%H:%M:%S') ===\"; sudo -u postgres psql -t -c \"SELECT coalesce(wait_event_type,'CPU') as type, coalesce(wait_event,'Running') as event, count(*) as cnt FROM pg_stat_activity WHERE state='active' AND pid<>pg_backend_pid() GROUP BY 1,2 ORDER BY 3 DESC LIMIT 10\"; sleep 1; done"
          ]
        },
        {
          "name": "pg_checkpoint_log",
          "cmd": [
            "bash",
            "-c",
            "timeout {duration}s tail -f /var/log/postgresql/postgresql-16-main.log 2>/dev/null | grep --line-buffered -i checkpoint || true"
          ]
        },
        {
          "name": "pgbench",
          "cmd": [
            "sudo",
            "-u",
            "postgres",
            "pgbench",
            "-c",
            "100",
            "-j",
            "8",
            "-T",
            "{duration}",
            "-P",
            "5",
            "-b",
            "tpcb-like",
            "pgbench"
          ],
          "primary": true
        },
        {
          "name": "pg_deep_stats",
          "cmd": [
            "bash",
            "-c",
            "echo 'Time,HitRatio,DiskRead,XactCommit,CkptReq,BufBackend,WalBytes'; for i in $(seq 1 12); do sudo -u postgres psql -t -A -F',' -c \"SELECT to_char(now(), 'HH24:MI:SS'), round(d.blks_hit::numeric / (d.blks_hit + d.blks_read + 1) * 100, 2), d.blks_read, d.xact_commit, b.checkpoints_req, b.buffers_backend, w.wal_bytes FROM pg_stat_database d, pg_stat_bgwriter b, pg_stat_wal w WHERE d.datname = current_database()\"; sleep 5; done"
          ]
        }
      ],
      "end": [
        {
          "name": "pg_stat_bgwriter",
          "cmd": [
            "sudo",
            "-u",
            "postgres",
            "psql",
            "-c",
            "SELECT buffers_checkpoint, buffers_clean, buffers_backend, buffers_alloc FROM pg_stat_bgwriter"
          ]
        }
      ]
    },
