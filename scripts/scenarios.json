    "1": {
      "id": "wal_heartbeat",
      "name": "The Heartbeat",
      "desc": "Commit Latency - Single backend sync write (QD1+fdatasync)",
      "target_disk": "wal",
      "duration": 60,
      "begin": [],
      "parallel": [
        {
          "name": "fio",
          "cmd": [
            "fio",
            "--name=wal_commit_latency",
            "--filename=/wal/bench_wal_lat",
            "--size=2G",
            "--time_based",
            "--runtime={duration}s",
            "--ioengine=libaio",
            "--direct=1",
            "--bs=8k",
            "--rw=write",
            "--fdatasync=1",
            "--iodepth=1",
            "--numjobs=1",
            "--group_reporting"
          ],
          "primary": true,
          "cleanup": "/wal/bench_wal_lat"
        },
        {
          "name": "iostat",
          "cmd": [
            "iostat",
            "-xz",
            "1",
            "{duration}"
          ],
          "filter_volumes": true
        },
        {
          "name": "mpstat",
          "cmd": [
            "mpstat",
            "-P",
            "ALL",
            "1",
            "{duration}"
          ]
        }
      ],
      "end": []
